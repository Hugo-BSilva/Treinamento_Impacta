@model ProjMercado.Models.Venda

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Venda</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Valor_Total)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Valor_Total)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Usuario.UserName)
        </dd>
        <dt class="col-sm-2">
            Itens
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.Items)
            {
                <p>
                    <span>@item.Produto.Nome_Produto</span>
                    <span>R$: @item.Produto.Preco_Produto</span>
                    <span>QTD: @item.Quantidade</span>
                </p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
